{
  "manifest_version": 3,
  "name": "Area Screenshot to Clipboard",
  "version": "1.1", 
  "description": "Select an area on the page and copy the screenshot to the clipboard.",
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "offscreen"
  ],
  "action": {
    "default_title": "Take Area Screenshot",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}